---
export interface Props {
  title: string;
  description: string;
  coverImage: string;
}

const { title, description, coverImage } = Astro.props;
---

<section class="relative text-white bg-gray-900 dark:bg-gray-900 dark:text-white">
  <img src={coverImage} alt={title} class="absolute inset-0 object-cover w-full h-full opacity-50 dark:opacity-30" />
  <div class="relative max-w-4xl px-4 py-16 mx-auto sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-white sm:text-4xl lg:text-5xl dark:text-white">{title}</h1>
    <p class="mt-4 text-lg text-white sm:text-xl lg:text-2xl dark:text-white">{description}</p>
  </div>
</section>
