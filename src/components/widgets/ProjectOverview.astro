---
export interface Props {
  projectType: string;
  role: string;
  contribution: string;
  collaboration: string;
  methodologies: string[];
  tools: string[];
  preview: string;
  results: string;
}

const { projectType, role, contribution, collaboration, methodologies = [], tools = [], preview, results } = Astro.props;
---

<div class="max-w-2xl mx-auto p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Project Overview</h2>
  <p class="text-gray-700 dark:text-gray-300 mb-4"><strong>Project Type:</strong> {projectType}</p>
  <p class="text-gray-700 dark:text-gray-300 mb-4"><strong>Role:</strong> {role}</p>
  <p class="text-gray-700 dark:text-gray-300 mb-4"><strong>Contribution:</strong> {contribution}</p>
  <p class="text-gray-700 dark:text-gray-300 mb-4"><strong>Collaboration:</strong> {collaboration}</p>
  <p class="text-gray-700 dark:text-gray-300 mb-4"><strong>Methodologies:</strong> {methodologies.join(', ')}</p>
  <p class="text-gray-700 dark:text-gray-300 mb-4"><strong>Tools:</strong> {tools.join(', ')}</p>
  <div class="mb-4">
    <img src={preview} alt="Project Preview" class="w-full h-auto rounded-lg shadow-md" />
  </div>
  <p class="text-gray-700 dark:text-gray-300 mb-4"><strong>Results:</strong> {results}</p>
</div>
