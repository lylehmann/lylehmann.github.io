---
import { skillStack } from '@src/data/skills.ts';
---

<div class="skill-stack p-5">
  <div class='flex flex-wrap gap-4'>
    {skillStack.map((item) => (
      <div class='inline-flex items-center bg-gray-200 dark:bg-gray-700 rounded-full px-4 py-2'>
        <span class='text-sm'>{item.text}</span>
      </div>
    ))}
  </div>
</div>

<style>
  .skill-stack {
    margin-bottom: 1rem;
  }
</style>
