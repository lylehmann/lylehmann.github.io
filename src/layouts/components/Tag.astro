---
const { tag, variant = 'default' } = Astro.props;

const tagClasses =
	variant === 'primary'
		? 'border border-fill-primary dark:border-fill-primary rounded-2xl text-sm text-text-primary dark:text-text-primary bg-transparent dark:bg-transparent no-underline px-2 py-0.5 transition-all duration-700 hover:border-layer-floor2 dark:hover:border-layer-floor2'
		: variant === 'secondary'
			? 'border border-layer-floor2 dark:border-layer-floor2 rounded-2xl text-sm text-text-primary dark:text-text-onAccent bg-transparent dark:bg-transparent no-underline px-2 py-0.5 transition-all duration-700 hover:border-layer-floor1 dark:hover:border-layer-floor1'
			: 'border border-layer-floor2 dark:border-layer-floor2 rounded-2xl text-sm text-text-primary dark:text-text-primary no-underline px-2 py-0.5 transition-all duration-700 hover:border-layer-floor1 dark:hover:border-layer-floor1';
---

<span class={tagClasses}>
	{tag}
</span>
